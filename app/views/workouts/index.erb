<h1>Workout Index</h1>

<a href='/workouts/new'>Create New Workout</a>

<% @workouts.each do |workout| %>
    <br><br>
    <label style="font-weight: bold;">Workout Title: </label> <%= workout.title %>
    <br>
    <label style="font-weight: bold;">Date: </label><%= workout.date %>
    <br>
    <label style="font-weight: bold;">Exercises: </label>
    <ul>
    <li><%= workout.exercises[0] %></li>
    <li><%= workout.exercises[1] %></li>
    <li><%= workout.exercises[2] %></li>
    </ul>
    <a href='/workouts/<%= workout.id %>'>Show Workout Details</a>
    <br>
  <% end %>